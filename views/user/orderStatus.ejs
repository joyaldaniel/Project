    <section class="h-100 h-custom" style="background-color: #d2c9ff;">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12">
            <div class="card card-registration card-registration-2" style="border-radius: 15px;">
              <div class="card-body p-0">
                <div class="row g-0">
                  <div class="col-lg-12">
                    <div class="p-5">
                      <div class="d-flex justify-content-between align-items-center mb-5">
                        <h1 class="fw-bold mb-0 text-black">Orders</h1>
                        <h6 class="mb-0 text-muted">
                          <%= order.items.length %> items
                        </h6>
                      </div>
                      <hr class="my-4">

                      <% for(let i=0;i<order.items.length; i++) { %>

                        <div class="row mb-4 d-flex justify-content-between align-items-center">
                          <div class="col-md-2 col-lg-2 col-xl-2">
                            <img src="/images/<%= order.items[i].image1 %> " class="img-fluid rounded-3"
                              alt="Cotton T-shirt">
                          </div>
                          <div class="col-md-3 col-lg-3 col-xl-3">
                            <h6 class="text-muted">
                              <%= order.items[i].category %>
                            </h6>
                            <a href="/user-home/product?id=<%= order.items[i].itemId %> " style="text-decoration: none">
                              <h6 class="text-black mb-0">
                                <%= order.items[i].productName %>
                              </h6>
                            </a>
                          </div>
                          <div class="col-md-3 col-lg-3 col-xl-1 d-flex">
                            <h6>
                              <%= order.items[i].quantity %> No
                            </h6>
                          </div>
                          <div class="col-md-3 col-lg-3 col-xl-1 d-flex">
                            <h6 class="mb-0 itemPrice" id="price" value="">₹ <%= order.items[i].price %>
                            </h6>
                          </div>
                          <div class="col-md-3 col-lg-3 col-xl-1 d-flex">
                            <h6>Order <%= order.items[i].orderStatus %>
                            </h6>
                          </div>
                          <div class="col-md-3 col-lg-3 col-xl-1 d-flex">
                            <form action="/cancel-order?orderId=<%= order._id %>&itemId=<%= order.items[i].itemId %>"
                              method="post">
                              <% if(order.items[i].orderStatus==="Cancel" ){ %>
                                <h6><button type="" disabled class="btn btn-secondary">cancelled</button></h6>
                                <% }else if(order.items[i].orderStatus==="Delivered" ){ %>
                                  <h6><button type="submit" class="btn btn-primary">Return</button></h6>
                                  <% }else{ %>
                                    <h6><button type="submit" class="btn btn-danger">cancel</button></h6>
                                    <% } %>
                            </form>
                          </div>
                        </div>

                        <hr class="my-4">


                        <% } %>

                          <div class="pt-5">
                            <h6 class="mb-0"><a href="/all-orders" class="text-body"><i
                                  class="fas fa-long-arrow-alt-left me-2"></i>Back to All orders</a></h6>
                          </div>
                    </div>
